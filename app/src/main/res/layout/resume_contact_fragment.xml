<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.contacts.ResumeContactFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:contentPadding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/txtPersonCount"
                android:layout_width="111dp"
                android:layout_height="33dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="35dp"
                android:text="0"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labPerson"
                android:layout_width="112dp"
                android:layout_height="25dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:text="Personas"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/contactImageView"
                android:layout_width="96dp"
                android:layout_height="84dp"
                android:src="@drawable/ic_boss" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="300dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:contentPadding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="5dp"
                android:text="Grupos de trabajo"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/groupImageView"
                android:layout_width="97dp"
                android:layout_height="76dp"
                android:layout_marginStart="5dp"
                android:src="@mipmap/ic_group"
                app:srcCompat="@mipmap/ic_group" />

            <TextView
                android:id="@+id/txtGroupCount"
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="35dp"
                android:text="0" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/labContact"
            android:layout_width="116dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="8dp"
            android:text="@string/menu_contactos"
            app:layout_constraintBottom_toTopOf="@+id/cardView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.938" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>